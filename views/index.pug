extends layout

block content
  .container
    if error != ''
      include _error

    if txHash != ''
      include _txHash

    form(action="/claims" method="post")
      .row
        .col.m8
          div
            label Address
            input._width100(type="text" name="address" value=address placeholder="Address start with a capital T")
          div
            label Message
            input._width100(type="text" name="message" value=message placeholder="(Optional)")
          div
            label Amount
            input._width100(type="number" name="amount" value=amount placeholder=`(Up to ${xemMax}. Optional, if you want fixed amount)` min="1" max=xemMax)

        .col.m4
          div
            include _recaptcha

          div
            label &nbsp;
            button.button._primary._width100(type="submit") Claim!

          div
            label
              input(type="checkbox" name="encrypt" value="1" checked=encrypt)
              span.-label-body  Encrypt message
            label
              input(type="checkbox" name="mosaic" value="1" checked=mosaic)
              span.-label-body  Version2

    .row
      .col.m8
        label Sendback Address
        input._width100(type="text" readonly value=faucetAddress)
      .col.m4
        label Faucet Balance
        input._width100._alignRight(type="text" readonly value=faucetBalance)

    .row
      .col.m12
        h3 Readme
        ul
          li This is "Testnet XEM faucet".
          li You can get XEM randomly from #{xemMin} to #{xemMax}.
          li This is an experimental server, the spec can be change without notice.
          li Please send back XEM when you need no longer need.
          li Good luck! NEM development!
